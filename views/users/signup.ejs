<% layout("/layouts/boilerplate") %>

<body>

    <% if (error && error.length) { %>
        <div class="alert alert-danger alert-dismissible fade show offset-3 mt-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp on Voyageur</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation">
                <div class="mb-3">

             <label for="username" class="form-label">Username</label>
             <input
             name="username"
             id="username"
             type="text"
             class="form-control"
             required></div>
            <div class="valid-feedback">Looks Good!</div><br>

            <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
            name="email"
            id="email"
            type="text"
            class="form-control"
            required></div>
            <br>

            <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
            name="password"
            id="password"
            type="text"
            class="form-control"
            required></div>
            <br>
         <button class="btn btn-success">SignUp</button>

            </form>
        </div>
    </div>
</body>
